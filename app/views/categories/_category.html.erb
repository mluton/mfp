<% cache [category, admin_user?] do %>
  <div class="col-md-6">
    <h3><%= link_to category.name, category -%></h3>
    <p><%= category.description -%></p>

    <% if admin_user? %>
      <div class="btn-group">
        <%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-default' %>
        <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
<% end %>
