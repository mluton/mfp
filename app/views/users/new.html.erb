<div class="container">
  <h1>Sign Up</h1>

  <%= form_for @user do |f| %>

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: 'control-label' %>
      <%= f.text_field :email, class: 'form-control input-lg' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label' %>
      <%= f.password_field :password, class: 'form-control input-lg' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label' %>
      <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign Up", :class => 'btn btn-lg btn-primary' %>
    </div>
  <% end %>
</div>
